<div class="houses-flexbox">
  <div class="houses-left">
  <% @houses.each do |house| %>
    <div class="card-house" id="house-<%= house.id %>">
      <img src=<%= cl_image_path(house.photo) %> />
      <div class="card-house-infos">
        <h2><%= house.address %></h2>
        <p>Product description with <strong>relevant info</strong> only.</p>
      </div>
    </div>
  <% end %>

  </div>

  <div class="houses-right">
    <div
      id="map"
      style="width: 100%;
      height: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>

  </div>
</div>
